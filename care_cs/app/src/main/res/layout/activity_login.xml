<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    tools:context=".loginActivity">


    <TextView
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:fontFamily="@font/tway_air"
        android:gravity="center_horizontal"
        android:textColor="@color/black"
        android:text="간병인 케어팜"
        android:textAlignment="center"
        android:textSize="25dp" />

    <ImageView

        android:id="@+id/imageView2"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        app:srcCompat="@drawable/intssda" />

    <EditText
        android:id="@+id/login_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/tway_air"
        android:textSize="20dp"
        android:hint="ID" />


    <EditText
        android:id="@+id/login_pw"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="PW"
        android:inputType="textPassword"
        android:textSize="20dp"
        android:textStyle="bold" />

    <CheckBox
        android:id="@+id/auto_bt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/tway_air"
        android:text="자동로그인" />

    <Button
        android:id="@+id/login_bt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="#9AD654"
        android:fontFamily="@font/tway_air"
        app:backgroundTint="#4CAF50"
        android:text=" 로그인 "
        android:textSize="20dp" />


    <Button
        android:id="@+id/join_bt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        app:backgroundTint="#A3A3A3"
        android:background="#D8D7D7"
        android:textSize="20dp"
        android:fontFamily="@font/tway_air"
        android:text=" 회원가입 " />


    <ImageView
        android:id="@+id/login_kakao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        app:srcCompat="@drawable/kakao_login_large_wide" />

    <Button
        android:id="@+id/find_bt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="#FFFFFF"
        app:backgroundTint="#4CAF50"
        android:textSize="20dp"
        android:fontFamily="@font/tway_air"
        android:text=" 정보찾기 " />



</LinearLayout>